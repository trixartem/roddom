#comment-roddom {
    height: 38px;
}

.select {
    position: relative;
    display: inline-block;
    &__toggle-button {
        user-select: none;
        cursor: pointer;
        &::after {
            content: 'â€º';
            transform: rotate(90deg);
            position: relative;
            display: inline-block;
            margin: 0 8px;
            font-size: 19px;
            line-height: 37px;
            vertical-align: middle;
        }
    }
    &__item {
        margin: 0;
        padding: 0 10px;
        white-space: nowrap;
        line-height: 22px;
        transition-property: background-color, color;
        transition-duration: 0.2s;
        cursor: pointer;
        color: #9f9f9f;
        &:hover {
            background-color: #00bb9c;
            color: #fff;
        }
    }
    &__list {
        position: absolute;
        visibility: hidden;
        opacity: 0;
        top: 25px;
        background-color: #fff;
        z-index: 1;
        color: #ababaa;
        border: 1px solid #d4d4d4;
        transition-property: visibility, opacity;
        transition-duration: 0s, .2s;
        transition-delay: .2s, 0s;
        &.showed {
            visibility: visible;
            opacity: 1;
            transition-delay: 0s;
        }
    }
}

.success {
    &__img {
        background-image: url('../image/success.png');
        background-size: 60px;
        width: 60px;
        height: 60px;
        float: left;
        margin-right: 15px;
    }
}

.comments {
    border: 1px solid #d9d9d9;
    border-radius: 3px;
    &__header,
    &__footer {
        color: #37b39c;
    }
    &__footer {
        border-top: 1px solid #d9d9d9;
        padding: 5px 13px;
        & a {
            cursor: pointer;
        }
    }
    &__header {
        padding: 0 21px;
        border-bottom: 1px solid #d9d9d9;
        line-height: 28px;
        font-size: 16px;

    }
    &__text {
        font-size: 11px;
        line-height: 14px;
        position: relative;
        padding: 10px 18px;
        text-align: justify;
        &:before,
        &:after {
            position: absolute;
            background-image: url('../image/icons.svg');
            width: 17px;
            height: 12px;
            display: inline-block
            content: '';
        }
        &:before {
            top: 0;
            left: 0;
            background-position: -167px -590px;
        }
        &:after {
            right: 0;
            bottom: 0;
            background-position: -217px -628px;
        }
    }
    &__body {
        position: relative;
        padding: 17px 16px;
    }
    &__item.active {
        display: block;
