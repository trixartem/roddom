body {
    color: #535353;
}

.body {
    &__maps {
        padding: 0 1.7375rem 50px;
    }

    &__gallery {
        padding: 30px 1.7375rem 40px;

    }

    &__carousel {
        position: relative;
        padding: 14px 1.7375rem 0;
    }

    &__breadcrumb {
        margin: 19px 0 14px;
        padding: 0 1.7375rem;
    }
    &__share {
        padding: 0 1.7375rem;
    }
    &__header {
        text-align: center;
        margin: 13px 0 0;
        font-size: 37px;
        font-weight: 400;
        color: #37b39c;
    }
}

a {
    opacity: 1;
    transition: opacity .2s ease;
    &:hover {
        text-decoration: none;
        opacity: .6;
    }
}

.breadcrumb {
    & > li + li:before {
        content: ' >';
        color: #b2b2b2;
    }

    &__link {
        color: rgba(0, 184, 152, 1);
        text-decoration: underline;
        transition: color .2s ease;
        font-weight: 700;
        &:hover {
            color: rgba(0, 184, 152, 0.6);
        }
    }

    & > .active {
        color: #b2b2b2;
    }

    margin-bottom: 0;
    background: none;
    padding: 0;
    font-size: 12px;
}

.creators {
    margin-top: 22px;

    &__item {
        margin-top: 30px;
        text-align: center;
    }

    &__title {
        text-align: center;
        margin-bottom: 52px;
    }

    &__text {
        font-size: 13px;
    }

    &__post {
        font-size: 15px;
        font-style: italic;
        margin-top: 10px;
        color: #9d9d9d;
    }

    &__name {
        font-weight: 700;
        font-size: 26px;
        line-height: 32px;
        margin-bottom: 24px;
    }
    &__img {
        height: 226px;
    }
}

.sub-header {
    color: #37b39c;
    font-weight: 400;
}

.carousel {
    &-item {
        position: relative;
    }
    & .control {
        position: absolute;
        top: 50%;
        margin-top: -15px;
        &.left,
        &.right {
            line-height: 0;
            border-radius: 50%;
            background: #fff;
        }
        &.left {
            left: -19px;
        }
        &.right {
            right: -19px;
        }
    }
    & .arrow-left,
    & .arrow-right {
        width: 44px;
        height: 44px;
        display: inline-block;
        opacity: 1;
        transition: opacity .2s ease;
        &:hover {
            opacity: .6;
        }
    }

    & .arrow-left {
        background: url("../image/icons.svg") 249px 617px;
    }
    & .arrow-right {
        background: url("../image/icons.svg") 193px 617px;
    }
}

.info-card {
    margin-top: -506px;
    width: 643px;
    padding: 3px 27px 26px 64px;
    font-size: 14px;
    &__links {
        font-size: 11px;
        margin-bottom: 26px;
    }
    &__tag {
        color: #999;
        text-decoration: underline;
        &:hover {
            color: #999;
            text-decoration: underline;
        }
    }
    &__text {
        max-height: 115px;
        overflow: hidden;
        font-size: 1.1em;
        line-height: 22px;
        color: #989898;
    }
    &__header {
        font-size: 2.8em;
        color: #37b39c;
        font-weight: bold;
        margin-bottom: 12px;
        line-height: 1.35em;
    }
    &__button {
        margin-top: 29px;
    }
}

.button_size_m.btn-secondary {
    border: 1px solid;
}

.button_size_m {
    font-size: 13px;
    vertical-align: middle;
    border-radius: 5px;
    line-height: 16px;
    vertical-align: middle;
    font-style: italic;
    opacity: 1;
    outline: none;
    transition: opacity .2s ease-in;
    &:hover {
        opacity: .6;
    }
}

.gallery {
    position: relative;
    background: #fff;
    border-radius: 3px;
    border: 1px solid #f5f5f5;
    margin-bottom: 35px;
    margin-top: 31px;
    &__header {
        border-bottom: 1px solid #d8d8d8;
        line-height: 29px;
        font-size: 15px;
        padding-left: 21px;
        color: #37b39c;
    }
    &__wrap {
        overflow: hidden;
        position: relative;
        padding: 0;
        height: 115px;
        margin: 9px 20px 10px 18px;
        white-space: nowrap;
    }
    &__list {
        position: absolute;
        & a {
            margin-right: 13px;
            display: inline-block;
        }
    }

}

.iScrollHorizontalScrollbar {
    &:before {
        content: '';
        position: absolute;
        top: 0;
        left: -2px;
        right: -2px;
        border-radius: 15px;
        background-color: #fff;
        box-shadow: inset 1px 1px 1px rgba(0, 0, 0, .2);
        bottom: 0;
    }
    overflow: visible !important;
    height: 11px !important;
    z-index: 0 !important;
    &:after,
    &:before {
        content: '';
    }
}

.iScrollIndicator {
    top: 2px;
    height: 8px !important;
    background: #9d9d9c !important;
    border-radius: 15px !important;

}

