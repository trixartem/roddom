#mCSB_1_scrollbar_vertical {
    background: #ededed;
}

.post {
    display: inline-block;
    width: 210px;
    height: 455px;
    border: 1px solid #d9d9d9;
    border-radius: 1px;
    overflow: hidden;
    margin: 0 23px 29px 0;
    position: relative;
    & .icon {
        margin: 0 auto;
    }
    &__img {
        max-height: 165px;
        max-width: 210px;
        border-bottom: 1px solid #d9d9d9;
    }
    &__header {
        font-size: 18px;
        color: #575756;
        margin: 50px 11px 0 16px;
        line-height: 22px;
        height: 42px;
        overflow: hidden;
    }
    &__date {
        margin-left: 18px;
        font-size: 10px;
        position: absolute;
        bottom: 50px;
    }
    &__preview {
        font-size: 12px;
        margin: 6px 7px 0 18px;
        line-height: 17px;
        max-height: 120px;
        overflow: hidden;
    }
    &__likes {
        padding-top: 5px;
        text-align: center;
        position: absolute;
        bottom: 5px;
        left: 12px;
        right: 12px;
        border-top: 1px dotted #d9d9d9;
    }
    &__category {
        position: absolute;
        top: 188px;
        left: 22px;
        font-size: 10px;
        font-style: italic;
        color: #707070;
        text-decoration: underline;
        transition: opacity .2s ease;
        opacity: 1;
        &:hover {
            color: #707070;
            opacity: .6;
        }
    }

    &__header {
        transition: opacity .2s ease;
    }

    &__link {
        border: 0;
        opacity: 1;
        transition: opacity .2s ease;
        &:hover,
        &:hover .post__header {
            opacity: .6;
            text-decoration: none;
        }
    }

}

.icon {
    display: table;
    &__wrap {
        display: table-row;
    }
    &__item {
        display: table-cell;
    }
    &__like,
    &__messages,
    &__view,
    &__share {
        background-image: url(../image/icons.svg);
        user-select: none;
        display: inline-block;
        height: 12px;
        vertical-align: middle;
        opacity: 1;
    }
    &__like {
        &:hover {
            opacity: .2;
        }
        transition: opacity .2s ease-out;
        cursor: pointer;
        background-position: 279px -417px;
        width: 16px;
    }
    &__messages {
        background-position: 230px -417px;
        width: 14px;
        cursor: pointer;
        text-decoration: none;
        &:hover {
            opacity: .2;
        }
        transition: opacity .2s ease-out;
    }
    &__view {
        background-position: 188px -417px;
        width: 17px;
    }
    &__share {
        background-position: 131px -417px;
        width: 13px;
        cursor: pointer;
        &:hover {
            opacity: .2;
        }
        transition: opacity .2s ease-out;
    }

    &__counter {
        font-size: 12px;
        color: #c6c6c6;
        display: inline-block;
        min-width: 30px;
        padding-right: 10px;
    }
}

.sort {
    margin: 12px 0 32px;
    text-align: center;
    &__select {
        display: inline-block;
        margin-right: 10px
    }
    &__link[href] {
        text-decoration: underline;
        margin-right: 6px;
        opacity: 1;
        transition: opacity .2s ease;
        &:hover {
            color: #6d6d6d;
            opacity: .6;
        }
    }
    &__link {
        font-size: 12px;
        text-decoration: none;
        color: #6d6d6d;
        margin-right: 6px;
        &:hover {
            color: #6d6d6d;
            opacity: 1;
        }
    }
    &__text {
        font-size: 12px;
        margin-right: 15px;
    }
}
