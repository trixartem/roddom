.popover {
    border: 1px solid #ececec;
}

.promo {
    position: relative;
    &__header {
        position: absolute;
        top: 18px;
        font-size: 40px;
        right: 57px;
        border-bottom: 2px dashed;
        cursor: pointer;
        transition: opacity .2s ease;
        opacity: 1;
        &:hover {
            text-decoration: none;
            color: #37b39c;
            opacity: .6;
        }
    }
    &__button {
        position: absolute;
        bottom: 32px;
        right: 30px;
        width: 500px;
        text-align: center;
    }
}

.text-slider {
    background: #fcfcfc;
}

.text-slide {
    outline: none;
    width: 333px;
    height: 191px;
    &__header {
        font-size: 26px;
        color: #37b39c;
        width: 210px;
        margin: 17px 0 11px 70px;
        display: block;
        opacity: 1;
        transition: opacity .2s ease;
        &:hover {
            text-decoration: none;
            color: #37b39c;
            opacity: .6;
        }
    }
    &__content {
        color: #717171;
        font-size: 12px;
        font-style: italic;
        line-height: 22px;
        margin-left: 70px;
    }
}

.slider-arrow {
    &__wrap {
        z-index: 10;
        position: absolute;
        top: 50%;
        margin-top: -22px;
        width: 44px;
        height: 44px;
        display: inline-block;
        background: #fff;
        border-radius: 22px;
        &._prev {
            left: -22px;
        }
        &._next {
            right: -22px;
        }
    }
    width: 44px;
    height: 44px;
    display: inline-block;
    opacity: 1;
    transition: opacity .2s ease;
    cursor: pointer;

    &:hover {
        opacity: .6;
    }

    &__wrap._prev & {
        background: url("../image/icons.svg") 249px 617px;
    }
    &__wrap._next & {
        background: url("../image/icons.svg") 193px 617px;
    }
}

.tabs {
    &__tab {
        margin: 0;
        height: 1px;
        opacity: 0;
        pointer-events: none;

        &._checked {
            margin-top: 23px;
            height: auto;
            opacity: 1;
            pointer-events: all;
        }
    }
    &__item {
        white-space: nowrap;
        display: inline-block;
        line-height: 26px;
        font-size: 19px;
        color: #00c3ac;
        padding: 5px 10px;
        cursor: pointer;
        opacity: 1;
        border: 1px solid transparent;
        transition-property: opacity border-color;
        transition-duration: .2s;
        &:hover {
            opacity: .6;
        }
        & sup {
            top: -0.65em;
            font-size: 12px;
            color: #999;
        }
        &._checked {
            cursor: default;
            color: #686868;
            border: 1px solid #00c3ac;
            border-radius: 5px;
            &:hover {
                opacity: 1;
            }
        }
    }
}

.specialist {
    &-slider__item:hover {
        color: #37b39d;
    }

    &-slider__item {
        width: 231px;
        margin-right: 30px;
    }

    &__info {
        padding: 24px 16px 26px;
    }
}
.address {
    color: #595959;
    &-slider {
        &__item {
            background-color: #fcfcfc;
            width: 234px;
            height: 431px;
            margin-right: 30px;
        }
        & .slider-arrow__wrap {
            top: 80px;
        }
    }
    &__info {
        padding: 0 23px;
    }
    &__table {
        margin-top: 21px;
    }
    &__phone {
        margin-top: 15px;
    }
    &__button {
        margin-top: 20px;
        width: 450px;
        display: inline-block;
    }
    &__metro {
        margin-top: 23px;
        &::before {
            content: '';
            margin-right: 7px;
            display: inline-block;
            width: 28px;
            height: 19px;
            background: url('../image/icons.svg') -187px -529px;
        }
    }
    &__full {
        margin-top: 4px;
    }
}

.programm {
    & .btn.btn-secondary.btn-sm {
        height: 31px;
    }
    &__icon {
        background-image: url("../image/icons.svg");
        width: 49px;
        height: 53px;
        vertical-align: top;
        display: inline-block;
        margin-top: -17px;
        background-color: #fff;
        background-position: -180px -684px;
        margin-left: 11px;
    }
}
.calendar {
    background: #f6f6f6;
    white-space: nowrap;
    &__left {
        width: 409px;
        color: #fff;
        display: inline-block;
        vertical-align: top;
    }
    &__right {
        width: 529px;
        display: inline-block;
    }
    &__header {
        background-color: #6ae2cb;
        line-height: 36px;
        padding-left: 16px;
        font-size: 13px;
    }
    &__switch {
        display: inline-block;
        &._time {
            display: inline-block;
            width: 91px;
        }
    }
    &__date {
        display: inline-block;
        width: 52px;
    }
    &__date-num {
        display: inline-block;
        text-align: center;
        padding-top: 20px;
        width: 68px;
        vertical-align: top;
    }
    &__day {
        font-size: 20px;
        display: block;
        line-height: 8px;
    }
    & table .time{
        padding: 6px 0;
        opacity: .7;
        width: 93px;
    }
    & table .exercise{
        padding: 6px 0;
        width: 100px;
    }
    & table .button .btn,
    & &__all.btn {
        border: 1px solid #fff;
        color: #fff;
        padding: 0 4px;

        border-radius: 5px;
        outline: none;
        opacity: 1;
        transition: opacity .2s ease;
        &:hover {
            opacity: .6;
        }
    }
    & &__all.btn {
        margin: 0 0 10px;
        line-height: 20px;
        &.hidden {
            display: none;
        }
    }
    & table .button{
        width: 127px;
        text-align: right;
        vertical-align: middle
    }
    &__row {
        white-space: nowrap
        &.hidden {
            display: none;
        }
    }
    &__month {
        color: #00aa91;
        font-size: 11px;
    }
    &__schedual {
        width: 320px;
        font-size: 13px;
        margin-top: 10px;
        display: inline-block;
    }
    &__list {
        background-color: #55ceb7;
        height: 277px;
        overflow-y: auto;
    }
    &__line {
        border-top: 1px solid #40b8a1;
        border-bottom: 1px solid #78d3c2;
    }
}

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button,
input[type=date]::-webkit-inner-spin-button,
input[type=date]::-webkit-outer-spin-button,
input[type=time]::-webkit-inner-spin-button,
input[type=time]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    margin: 0;
}

#comment-roddom {
   height: 38px;
}

.select {
    position: relative;
    display: inline-block;
    &__toggle-button {
        user-select: none;
        cursor: pointer;
        &::after {
            content: 'â€º';
            transform: rotate(90deg);
            position: relative;
            display: inline-block;
            margin: 0 8px;
            font-size: 19px;
            line-height: 37px;
            vertical-align: middle;
        }
    }
    &__item {
        margin: 0;
        padding: 0 10px;
        white-space: nowrap;
        line-height: 22px;
        transition-property: background-color, color;
        transition-duration: 0.2s;
        cursor: pointer;
        color: #9f9f9f;
        &:hover {
            background-color: #00bb9c;
            color: #fff;
        }
    }
    &__list {
        position: absolute;
        visibility: hidden;
        opacity: 0;
        top: 25px;
        background-color: #fff;
        z-index: 1;
        color: #ababaa;
        border: 1px solid #d4d4d4;
        transition-property: visibility, opacity;
        transition-duration: 0s, .2s;
        transition-delay: .2s, 0s;
        &.showed {
            visibility: visible;
            opacity: 1;
            transition-delay: 0s;
        }
    }
}
.success {
    &__img {
        background-image: url('../image/success.png');
        background-size: 60px;
        width: 60px;
        height: 60px;
        float: left;
        margin-right: 15px;
    }
}

