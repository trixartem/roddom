body {
    color: #535353;
}

.body {
    &__maps {
        padding: 0 1.7375rem 50px;
    }

    &__gallery {
        padding: 30px 1.7375rem 40px;

    }

    &__carousel {
        position: relative;
        padding: 14px 1.7375rem 0;
    }

    &__breadcrumb {
        margin: 19px 0 14px;
        padding: 0 1.7375rem;
    }
    &__share {
        padding: 0 1.7375rem;
    }
    &__tabs {
        margin-top: 52px;
    }
    &__promo {
        margin-bottom: 40px;
    }
    &__tabs,
    &__promo {
        padding: 0 1.7375rem;
    }
    &__creators {
        padding-bottom: 60px;

    }

}
a {
    opacity: 1;
    transition: opacity .2s ease;
    &:hover {
        text-decoration: none;
        opacity: .6;
    }
}
.breadcrumb {
    & > li + li:before {
        content: ' >';
        color: #b2b2b2;
    }

    &__link {
        color: rgba(0, 184, 152, 1);
        text-decoration: underline;
        transition: color .2s ease;
        font-weight: 700;
        &:hover {
            color: rgba(0, 184, 152, 0.6);
        }
    }

    & > .active {
        color: #b2b2b2;
    }

    margin-bottom: 0;
    background: none;
    padding: 0;
    font-size: 12px;
}

.creators {
    margin-top: 22px;

    &__item {
        margin-top: 30px;
        text-align: center;
    }

    &__title {
        text-align: center;
        margin-bottom: 52px;
    }

    &__text {
        font-size: 13px;
    }

    &__post {
        font-size: 15px;
        font-style: italic;
        margin-top: 10px;
        color: #9d9d9d;
    }

    &__name {
        font-weight: 700;
        font-size: 26px;
        line-height: 32px;
        margin-bottom: 24px;
    }
    &__img {
        height: 226px;
    }
}

.sub-header {
    color: #37b39c;
    font-weight: 400;
}

.carousel {
    &-item {
        position: relative;
    }
    & .control {
        position: absolute;
        top: 50%;
        margin-top: -15px;
        &.left,
        &.right {
            line-height: 0;
            border-radius: 50%;
            background: #fff;
        }
        &.left {
            left: -19px;
        }
        &.right {
            right: -19px;
        }
    }
    & .arrow-left,
    & .arrow-right {
        width: 44px;
        height: 44px;
        display: inline-block;
        opacity: 1;
        transition: opacity .2s ease;
        &:hover {
            opacity: .6;
        }
    }

    & .arrow-left {
        background: url("../image/icons.svg") 249px 617px;
    }
    & .arrow-right {
        background: url("../image/icons.svg") 193px 617px;
    }
}

.info-card {
    position: absolute;
    top: 33px;
    left: 31px;
    width: 488px;
    padding: 3px 26px 26px;
    font-size: 14px;
    &__text {
        max-height: 237px;
        overflow: hidden;
        font-size: 1.1em;
        line-height: 22px;
        color: #989898;
    }
    &__header {
        font-size: 2.9em;
        color: #37b39c;
        font-weight: bold;
        margin-bottom: 18px;
    }
    &__button {
        margin-top: 33px;
    }
}

.info-card_small {
    background: #fff;
    position: absolute;
    left: 40px;
    bottom: 33px;
    width: 406px;
    padding: 12px 15px 10px;
    font-size: 14px;
    border-radius: 5px;
    &__text {
        max-height: 237px;
        overflow: hidden;
        font-size: 1em;
        line-height: 1.6em;
    }
    &__header {
        font-size: 1.8em;
        line-height: .8em;
        color: #37b39c;
        &-text {
            line-height: 24px;
        }
        &:after {
            content: '';
            margin-bottom: 9px;
            margin-top: 12px;
            display: block;
            width: 100%;
            border: 1px dashed #d5d5d5;
        }
    }
    & .button_size_m {
        float: right;
    }

}

.button_size_m.btn-secondary {
    border: 1px solid;
}

.button_size_m {
    font-size: 13px;
    vertical-align: middle;
    border-radius: 5px;
    line-height: 16px;
    vertical-align: middle;
    font-style: italic;
    opacity: 1;
    outline: none;
    transition: opacity .2s ease-in;
    &:hover {
        opacity: .6;
    }
}

.gallery {
    position: relative;
    overflow: hidden;
    height: 168px;
    &__wrap {
        position: absolute;
        z-index: 1;
        padding: 0;
        white-space: nowrap;
    }
    &__item {
        height: 140px;
        background: #ccc;
        display: inline-block;
        transition: opacity .2s ease-out;
        opacity: 1;
        &:hover {
            opacity: .7;
            cursor: pointer;
        }
    }
}

.iScrollHorizontalScrollbar {
    height: 12px !important;
    z-index: 0 !important;
    background: #ededed;
    &:after,
    &:before {
        content: '';
    }
}

.iScrollIndicator {
    top: 2px;
    height: 8px !important;
    background: #9d9d9c !important;
    border-radius: 0 !important;

}

.b-container {
    width: 1024px;
    margin: 0 auto;
    padding: 0 .9375rem;
}

.share-wrapper {
    background: #fff;
    border: 1px solid #ececec;
    border-radius: 3px;
    padding: 6px 14px 6px 20px;
    margin: 37px 0;
    &__header {
        color: #00b59e;
        font-size: 17px;
    }
