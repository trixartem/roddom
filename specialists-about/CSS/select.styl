.s-hidden {
    visibility: hidden;
    position: absolute;
    padding-right: 10px;
}

.select {
    text-align: left;
    cursor: pointer;
    display: inline-block;
    position: relative;
    font-size: 12px;
    border: 1px solid #cecece;
    border-radius: 1px;
    height: 17px;
    min-width: 84px;
}

.styledSelect {
    padding: 0 23px 0 4px;
    font-style: italic;
    color: #9f9f9f;
    line-height: 15px;
    user-select: none;
}

.styledSelect::after {
    content: "â–¶";
    font-style: normal;
    transform: rotate(90deg);
    transition: transform .3s ease;
    position: absolute;
    top: 0;
    right: 5px;
    font-size: 9px;
}

//.styledSelect:active,
.styledSelect.active.smaller::before {
    z-index: 10;
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -1px;
    left: 0;
    background-color: #fff;
}

.styledSelect.active::after {
    transform: rotate(-90deg);
}

.options.hidden {
    visibility: hidden;
    opacity: 0;
    transform: translateY(10px);
    transition-delay: .2s, 0, 0;
}

.options.smaller::before {
    z-index: 10;
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    top: -1px;
    left: 0;
    background-color: #fff;
}

.options {
    transition-property: visibility, opacity, transform;
    transition-duration: 0s, .2s, .2s;
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    position: absolute;
    top: 100%;
    left: -1px;
    z-index: 9;
    margin: 0 0;
    padding: 0 0;
    list-style: none;
    border: 1px solid #ccc;
    background-color: white;
}

.options .select__group {
    padding-left: 12px;
}
.select__group-name {
    font-weight: 700;
}
.options .select__item {
    margin: 0;
    padding: 0 10px;
    white-space: nowrap;
    line-height: 22px;
    transition-property: background-color, color;
    transition-duration: .2s;
    color: #9f9f9f;
}

.options .select__item:hover {
    background-color: #00bb9c;
    color: #fff;
}
